# ====================================
# CONFIGURATION TEMPLATE
# Copy this file to .env.local and fill with your actual values
# ====================================

# ----------------
# Application Port
# ----------------
PORT=3001

# ----------------
# OpenAI (Required for AI features)
# ----------------
OPENAI_API_KEY=your_openai_api_key_here

# ----------------
# Google Gemini AI
# ----------------
GOOGLE_GEMINI_KEY=your_gemini_api_key_here

# ----------------
# Supabase (Database & Authentication)
# ----------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ----------------
# Public Site URL (OAuth redirect target)
# ----------------
# Primary production URL (Netlify)
NEXT_PUBLIC_SITE_URL=https://luxeagent.netlify.app
# Optional: override for previews/local (e.g., Netlify DEPLOY_PRIME_URL)
NEXT_PUBLIC_DEPLOY_URL=http://localhost:3001

# ----------------
# CASAFARI API (Real Estate Data)
# ----------------
CASAFARI_API_KEY=your_casafari_api_key_here
CASAFARI_EMAIL=your_casafari_email_here
CASAFARI_PASSWORD=your_casafari_password_here

# ----------------
# Stripe (Payment Processing)
# ----------------
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# ----------------
# Google OAuth
# ----------------
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ----------------
# Optional: Feature Flags
# ----------------
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=false
